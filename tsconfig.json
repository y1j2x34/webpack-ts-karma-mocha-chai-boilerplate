{
    "compilerOptions": {
      "module": "esnext",
      "moduleResolution": "node",
      "target": "es5",
      "lib": ["dom", "es5", "es6", "esnext", "scripthost", "es2015.promise"],
      "strict": true,
      "noImplicitAny": false,
      "noUnusedLocals": true,
      "alwaysStrict": true,
      "preserveConstEnums": true,
      "removeComments": false,
      "sourceMap": true,
      "importHelpers": true,
      "listFiles": true,
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "typeRoots": [
          "node_modules/@types",
          "src/types"
      ]
    },
    "include": ["src"]
  }
